SELECT 
   host_list.host AS HostName,
   CASE 
       WHEN hosts.host IS NOT NULL THEN 'найден'
       ELSE 'не найден'
   END AS Status
FROM 
   (SELECT 'NBMS-AGODOVIKOV' AS host
    UNION ALL SELECT 'NBMS-ILEBEDEVA'
    UNION ALL SELECT 'NBMS-GADZHIEV'
    UNION ALL SELECT 'NBMS-SKHLEBNIK'
    UNION ALL SELECT 'NBMS-MATVEEV'
    UNION ALL SELECT 'NBMS-AMARTYNOV'
    UNION ALL SELECT 'NBMS-ADMITRIEV'
    UNION ALL SELECT 'NBMS-VGRISHIN2'
    UNION ALL SELECT 'NBMS-SVECHNIKOV') AS host_list
LEFT JOIN hosts ON host_list.host = hosts.host;
